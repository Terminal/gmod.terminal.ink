doctype html

html
	head
		block title
			title #{title ? `${title} -` : ''} #{__('website')}
		block stylesheets
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")
		link(rel="stylesheet" href="/css/mss.css")
	body
		nav.light-blue.lighten-1
			.nav-wrapper.container
				.brand-logo
					a(href="/") #{__('nav_header')}
		main
			block content
		footer
			footer.page-footer.light-blue.lighten-1
				.container
					.row
						.col.s12
							p#random.grey-text.text-lighten-4 #{__('footer_noscript')}
				.footer-copyright.light-blue
					.container #{__('footer_copyright')}
		block script
		script(src="https://code.jquery.com/jquery-3.1.1.slim.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js")
		script(src="https://moustacheminer.com/js/random.js")
